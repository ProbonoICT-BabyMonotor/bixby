macro-def (login-summary) {
  params {
    param (login) {
      type (message)
      min (Required)
      max (One)
    }
  }
 
  content {
    title-card{
      title-area {
        slot1 {
          text {
            style (Title_L)
            value {
              template ("#{value (login)}")
            }
          }
        }
      }
    }
  }
}